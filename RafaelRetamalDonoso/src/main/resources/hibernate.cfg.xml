<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="use_sql_comments">true</property>
        <!-- Si ponemos esta propiedad nos crea las tablas de la base de datos -->
        <!--<property name="hibernate.hbm2ddl.auto">create</property>-->
        <!-- Pool de conexiones -->
        <property name="hibernate.connection.pool_size">1</property>
        <property name="hibernate.connection.datasource">java:comp/env/jdbc/UAU</property>
    
        <!--        <mapping class="es.albarregas.modelo.Libro"/>-->
        <mapping class="es.albarregas.modelo.Usuario"/>
        <mapping class="es.albarregas.modelo.Prestatarios"/>
        <mapping class="es.albarregas.modelo.Equipo"/>
        <mapping class="es.albarregas.modelo.Marca"/>
        <mapping class="es.albarregas.modelo.Categoria"/>
    </session-factory>
</hibernate-configuration>
